<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/baseDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of Toolbar -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="styleRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="textViewFillAct">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="dropDownImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/baseDark</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="bottomNavigationStyleMe" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
          <item name="android:padding">5dp</item>
         <item name="android:fontFamily">@font/inter</item>

         <item name="colorPrimary">@color/baseDark</item>
         <item name="colorPrimaryVariant">@color/baseDark</item>
         <item name="colorOnPrimary">@color/white</item>
         <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseLight</item>
        <item name="colorSecondaryVariant">@color/baseLight</item>
        <item name="colorOnSecondary">@color/baseDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/baseDark</item>
    </style>

    <style name="FieldsFillAct">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
    </style>


    <style name="backgroundStrokeGradient">
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

</resources>