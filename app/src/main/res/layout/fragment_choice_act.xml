<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.UI.Fragment.ChoiceActFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".Presentation.Activity.ChoiceActActivity">

        <LinearLayout
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/singlePhasePUButton"
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="1 Фазный ПУ" />

            <Button
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="3 Фазный ПВ" />

            <Button
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="3 Фазный ТТ" />

            <Button
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="Гарантийная замена" />

            <Button
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="Акт не допуска" />

            <Button
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="Ограничения" />

            <Button
                style="@style/buttonMain"
                android:layout_width="match_parent"
                android:text="Возобновления" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>